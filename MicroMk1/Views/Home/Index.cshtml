<style>
body {
    background-color: #6cf;
    font-size: 100%;
    padding: 3em;
    background-size: 20px
}
.mainNav {
    float: left;
    transform: perspective(500px);
    transform-style: preserve-3d;
    background-size: 20px
}
.mainNav ul {
  list-style: none;
  padding: 0;
}
.mainNav li {
    display: inline-block;
    margin-right: -.25em;
}
.mainNav a {
    background-color: hsla(0,0%,100%,.25);
    backface-visibility: hidden;
    color: #6cf;
    display: block;
    font: bold 4em/3 sans-serif;
    padding: 0 1.5em;
    position: relative;
    text-align: center;
    text-decoration: none;
    text-shadow: 0 1px 1px hsla(0,0%,100%,.25);
    transition: .5s;
    transform-origin: 0% 50%;
    transform-style: preserve-3d;
    width: 10em;

}
.mainNav a:after {
    background-color: #ebe4e4;
    color: inherit;
    content: attr(data-title);
    height: 100%;
    left: 0;
    line-height: 3;
    position: absolute;
    top: 100%;
    transform: rotateX(-90deg);
    transform-origin: 0 0;
    width: 100%;
}
.mainNav a:before {
    background-color:  #ebe4e4;
    bottom: 0;
    content: '';
    height: 3em;
    position: absolute;
    right: 0;
    top: 0;
    transform-origin: 0 0;
    width: 3em;
}
.mainNav li:nth-child(-n+2) a:before {
    transform: rotateY(90deg) translateZ(3em);
}
.mainNav li:nth-child(n+3) a:before {
    left: 0;
    right: auto;
    transform: rotateY(90deg);
}
.mainNav li:hover a {
    transform: rotateX(90deg) translateY(-1.5em) translateZ(1.5em);
}
.mainNav .current:hover a {
   transform: rotateX(0deg) translateY(0) translateZ(0);
}

