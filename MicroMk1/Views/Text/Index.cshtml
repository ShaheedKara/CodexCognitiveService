{
    <img src="@Model.ImageDump" width="600" />

        <h3>Texts</h3>

        <ol>
            @foreach (var result in Model.Results.Regions)
            {
                <li>
                    @result.BoundingBox
                    <ul>
                        @foreach (var line in result.Lines)
                    {
                            <li>
                                @foreach (var word in line.Words)
                                {
                                    <text>@word.Text</text>
                                }
                            </li>
                        }
                    </ul>
                </li>
            }
        </ol>
